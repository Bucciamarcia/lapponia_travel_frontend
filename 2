import 'package:flutter/material.dart';
import 'package:flutter_animate/flutter_animate.dart';
import 'package:flutter_riverpod/flutter_riverpod.dart';

import 'riverpod.dart';

class BookingMain extends ConsumerWidget {
  const BookingMain({super.key});

  @override
  Widget build(BuildContext context, WidgetRef ref) {
    final splashUriAsync = ref.watch(splashImageProvider);
    return splashUriAsync.when(
      data: (splashUri) {
        return Scaffold(
          body: Container(
            constraints: BoxConstraints.expand(),
            decoration: BoxDecoration(
              image: DecorationImage(
                image: NetworkImage(splashUri),
                fit: BoxFit.cover,
              ),
            ),
            child: BookingContent(),
          ),
        );
      },
      error: (e, s) {
        return Text("Error: couldn't load image");
      },
      loading: () => Scaffold(
        body: Center(
          child: SizedBox(
            height: 150,
            width: 150,
            child: Center(child: CircularProgressIndicator.adaptive()),
          ),
        ),
      ),
    );
  }
}

class BookingContent extends StatelessWidget {
  const BookingContent({super.key});

  @override
  Widget build(BuildContext context) {
    return Row(
      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
      crossAxisAlignment: CrossAxisAlignment.center,
      mainAxisSize: MainAxisSize.max,
      children: [SinglePanel(), SinglePanel()],
    );
  }
}

class SinglePanel extends StatelessWidget {
  const SinglePanel({super.key});

  @override
  Widget build(BuildContext context) {
    return Animate(
      effects: [FadeEffect(duration: Duration(seconds: 1))],
      child: Placeholder(),
    );
  }
}
